{
  "name": "tapknight",
  "version": "0.0.1",
  "description": "Some game or something?",
  "main": "_build/default/src/server.js",
  "engines": {
    "node": "v6.1.0"
  },
  "scripts": {
    "postinstall": "npm run build",
    "test": "echo 'No tests yet.  All good :D",
    "start": "node _build/default/src/server.js",
    "build": "rm -rf _build && eval $(dependencyEnv) && nopam && rebel",
    "top": "eval $(dependencyEnv) && rtop",
    "env": "eval $(dependencyEnv) && env",
    "editor": "eval $(dependencyEnv) && $EDITOR .",
    "whereisocamlmerlin": "eval $(dependencyEnv) && which ocamlmerlin-reason"
  },
  "rebel": {
    "targets": [
      {
        "target": "client",
        "engine": "bucklescript",
        "entry": "src/client.re"
      },
       {
        "target": "server",
        "engine": "bucklescript",
        "entry": "src/server.re"
      }
    ]
  },
  "dependencies": {
    "rexpress": "github:vramana/rexpress",
    "reason-js": "github:chenglou/reason-js",
    "repixi": "git+https://github.com/bsansouci/repixi.git",
    "resocketIO": "git+https://github.com/bsansouci/resocket.io.git",
    "@opam-alpha/merlin": "^ 2.5.0",
    "dependency-env": "https://github.com/npm-ml/dependency-env.git",
    "nopam": "https://github.com/yunxing/nopam.git",
    "realpath": "*",
    "rebel": "https://github.com/reasonml/rebel.git",
    "reason": "https://github.com/facebook/reason.git"
  },
  "devDependencies": {
    "webpack": "^1.13.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bsansouci/tapknight.git"
  }
}
